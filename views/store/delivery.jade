extends ../layout/store

block content
  .crumbs
    ol.breadcrumb
      li
        a(href="") 首页
      li
        a(href="") 订单列表
      li.active 发货
  .flowstep
    ol
      li
        span 拍下商品
      li
        span 卖家发货
      li
        span 确认收货
      li
        span 评价
  .order-info
  .order-gitem
    table.table
      thead
        tr
          th 商品
          th 单价
          th 数量
          th 小计
      tbody
        each item in ois
          tr
            td= item.product.name
            td= item.price
            td= item.number
            td= item.price * item.number
