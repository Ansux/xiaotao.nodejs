extends ../layout

block content
    .container
        .panel.panel-default
            .panel-heading 学生注册
            .panel-body
                form.form-horizontal(method='post',action='/student/signup')
                    .form-group
                        label.col-xs-2 Email
                        .col-xs-10
                            input.form-control(type='email',name='student[email]')
                    .form-group
                        label.col-xs-2 PWD
                        .col-xs-10
                            input.form-control(type='password',name='student[pwd]')
                    .form-group
                        label.col-xs-2 PWD2
                        .col-xs-10
                            input.form-control(type='password',name='comfirmPwd')
                    .form-group
                        .col-xs-offset-2.col-xs-10
                            button.btn.btn-primary(type='submit') 立即注册